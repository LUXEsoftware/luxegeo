<lccdd>

  <info name="test"
        title="test"
        author="Yee"
        url="luxe.desy.de"
        status="development"
        version="test">
    <comment> test LUXE tracker</comment>
  </info>

  <includes>
    <gdmlFile  ref="${DD4hepINSTALL}/DDDetectors/compact/elements.xml"/>
    <gdmlFile  ref="${DD4hepINSTALL}/DDDetectors/compact/materials.xml"/>
  </includes>

    <define>
        <constant name="world_side"             value="10*m"/>
        <constant name="world_x"                value="world_side"/>
        <constant name="world_y"                value="world_side"/>
        <constant name="world_z"                value="world_side"/>

        <constant name="tracker_region_zmax"        value="4300*mm"/>
        <constant name="tracker_region_rmax"        value="600*mm"/>
    </define>

<detectors>

  <detector name="Tracker" type="MLTracker" readout="SiHits" insideTrackingVolume="true">
    <layer id="1" x="290*mm" y="0" z="3960*mm" dx="250*mm" dy="15*mm" dz="0.1*mm">
      <slice material="Si" thickness="0.1*mm" length="250*mm" width="15*mm" sensitive="true"/>
   </layer>
    <layer id="2" x="290*mm" y="0" z="4060*mm" dx="250*mm" dy="15*mm" dz="0.1*mm">
      <slice material="Si" thickness="0.1*mm" length="250*mm" width="15*mm" sensitive="true"/>
    </layer>
    <layer id="3" x="290*mm" y="0" z="4160*mm" dx="250*mm" dy="15*mm" dz="0.1*mm">
      <slice material="Si" thickness="0.1*mm" length="250*mm" width="15*mm" sensitive="true"/>
    </layer>
    <layer id="4" x="290*mm" y="0" z="4260*mm" dx="250*mm" dy="15*mm" dz="0.1*mm">
      <slice material="Si" thickness="0.1*mm" length="250*mm" width="15*mm" sensitive="true"/>
    </layer>
  </detector>

</detectors>

<readouts>
    <readout name="SiHits">
      <segmentation type="CartesianGridXY" grid_size_x="0.025*mm" grid_size_y="0.025*mm"/>
      <id>system:3,layer:4,slice:4,x:32:-16,y:-16</id>
    </readout>
</readouts>

<fields>
    <field name="MagnetFields_Dipole" type="MultipoleMagnet" Z="0.*tesla" vis="MagVis">
     <position x="0*cm" y="0*cm" z="205.3*cm"/>
      <coefficient coefficient="-0.95*tesla" skew="0.*tesla"/>
      <shape type="Box" dx="16.5*cm" dy="3*cm" dz="61.9*cm"/>
    </field>
</fields>

<display>
    <vis name="MagVis"   alpha="0.1" r="1.0" g="0.0" b="0.0"  showDaughters="false"  visible="true"/>
    <vis name="VisibleRed"  r="1.0" g="0.0" b="0.0" showDaughters="true" visible="true"/>
    <vis name="Invisible" showDaughters="true" visible="false"/>
</display>

</lccdd>
