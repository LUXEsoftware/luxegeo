<readouts>
    <readout name="SiHits">
      <segmentation type="CartesianGridXY" grid_size_x="0.025*mm" grid_size_y="0.025*mm"/>
      <id>system:1,layer:2,stave:3,sensor:7,x:32:-16,y:-16</id>
    </readout>
</readouts>

<fields>
    <field name="MagnetFields_Dipole" type="MultipoleMagnet" Z="0.*tesla" vis="MagVis">
     <position x="0*cm" y="0*cm" z="205.3*cm"/>
      <coefficient coefficient="-0.95*tesla" skew="0.*tesla"/>
      <shape type="Box" dx="16.5*cm" dy="3*cm" dz="61.9*cm"/>
    </field>
</fields>

<display>
    <vis name="MagVis"   alpha="0.1" r="0.0" g="0.5" b="0.5"  showDaughters="false"  visible="true"/>
    <vis name="SolidRed"  r="1.0" g="0.0" b="0.0" showDaughters="true" visible="true"/>
    <vis name="Red"  alpha="0.1" r="1.0" g="0.0" b="0.0" showDaughters="true" visible="true"/>
    <vis name="Invisible" showDaughters="true" visible="false"/>
</display>

